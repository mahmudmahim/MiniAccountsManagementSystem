@page
@model MiniAccountManagementSystem.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>

<a asp-asp-page="ManageRoles" asp-route-userId="@Model.SelectedUserId">Manage Roles</a>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Roles</td>
                <td>
                    <a asp-page="ManageRoles" asp-route-userId="@user.Id">Edit Roles</a> |
                    <form method="post" asp-page-handler="Delete" asp-route-userId="@user.Id" style="display:inline;">
                        <button type="submit" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

