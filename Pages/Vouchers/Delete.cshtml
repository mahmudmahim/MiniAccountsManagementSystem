@page "{id:int}"
@model MiniAccountManagementSystem.Pages.Vouchers.DeleteModel
@{
    ViewData["Title"] = "Delete Voucher";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Delete Voucher</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-danger">Are you sure you want to delete this voucher?</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Voucher Type</dt>
                        <dd class="col-sm-8">@Model.Voucher.VoucherType</dd>
                        <dt class="col-sm-4">Reference No</dt>
                        <dd class="col-sm-8">@Model.Voucher.ReferenceNo</dd>
                        <dt class="col-sm-4">Date</dt>
                        <dd class="col-sm-8">@Model.Voucher.VoucherDate.ToShortDateString()</dd>
                        <dt class="col-sm-4">Created By</dt>
                        <dd class="col-sm-8">@Model.Voucher.CreatedBy</dd>
                        <dt class="col-sm-4">Total Amount</dt>
                        <dd class="col-sm-8">@Model.Voucher.Entries.Sum(e => e.Debit - e.Credit).ToString("C")</dd>
                    </dl>
                    <form method="post">
                        <input type="hidden" asp-for="Voucher.VoucherId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
