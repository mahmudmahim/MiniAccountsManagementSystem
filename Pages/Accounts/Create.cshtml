@page
@model MiniAccountManagementSystem.Pages.Accounts.CreateModel
@{
    ViewData["Title"] = "Create Account";
    Layout = "_Layout";
}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Create New Account</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Account.AccountName">Account Name</label>
                            <input asp-for="Account.AccountName" class="form-control form-control-sm" />
                            <span asp-validation-for="Account.AccountName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Account.AccountType">Account Type</label>
                            <input asp-for="Account.AccountType" class="form-control form-control-sm" />
                            <span asp-validation-for="Account.AccountType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Account.Balance">Balance</label>
                            <input asp-for="Account.Balance" class="form-control form-control-sm" />
                            <span asp-validation-for="Account.Balance" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Account.ParentAccountId">Parent Account</label>
                            <select asp-for="Account.ParentAccountId" class="form-control form-control-sm" asp-items="@Model.ParentAccounts">
                                <option value="">None</option>
                            </select>
                            <span asp-validation-for="Account.ParentAccountId" class="text-danger"></span>
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-sm btn-primary">Create</button>
                            <a asp-page="/Accounts/AccountsIndex" class="btn btn-sm btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}